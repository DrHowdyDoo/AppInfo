<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:padding="16dp"
    android:layout_marginTop="20dp"
    android:clipToPadding="false"
    tools:ignore="HardcodedText,ContentDescription">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iconContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.App.CardView.Filled.Round">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center"
            android:src="@drawable/outline_touch_app_24" />

    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Activities"
            android:layout_marginTop="8dp"
            android:textAppearance="?textAppearanceTitleMedium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExpandView"
            style="?attr/materialIconButtonFilledStyle"
            app:materialSizeOverlay="@style/SizeOverlay.Material3Expressive.Button.IconButton.Xsmall"
            android:layout_gravity="top|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="expand more"
            android:checkable="true"
            app:icon="@drawable/round_expand_more_24"/>

    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/listContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="24dp"
        style="?materialCardViewElevatedStyle">

        <com.google.android.material.loadingindicator.LoadingIndicator
            android:id="@+id/progressBar"
            style="@style/Widget.Material3.LoadingIndicator.Contained"
            android:layout_gravity="center_vertical|start"
            tools:visibility="visible"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/pill_margin_horizontal"
            android:paddingVertical="@dimen/pill_margin_vertical"
            android:clipToPadding="false"
            android:clickable="false"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/tvValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:textIsSelectable="true"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:text="com.drhowdydoo.appInfo.fragment.AppFragment" />

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvExpandIndicator"
                android:layout_width="wrap_content"
                android:textAppearance="?textAppearanceLabelLarge"
                android:text="• • • • •"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:id="@+id/fontBtnContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnExtractFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:gravity="center"
                    app:icon="@drawable/round_extract_24"
                    app:materialSizeOverlay="@style/SizeOverlay.Material3Expressive.Button.IconButton.Small.Wide"
                    style="?materialIconButtonFilledTonalStyle" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/pbFontExtraction"
                    android:layout_width="100dp"
                    style="@style/Widget.Material3.LinearProgressIndicator"
                    android:paddingHorizontal="12dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:indeterminate="true"
                    app:trackCornerRadius="16dp"
                    app:wavelength="26dp"
                    app:waveSpeed="1dp"
                    app:waveAmplitude="2dp"
                    app:indeterminateAnimationType="disjoint"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imgFontFile"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:src="@drawable/apk_file"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:elevation="0dp"
                    app:tint="?colorPrimary" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>